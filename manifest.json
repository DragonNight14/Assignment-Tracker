{
  "name": "Assignment Tracker",
  "short_name": "Assignments",
  "description": "Track and manage your academic assignments with ease",
  "start_url": "./index.html",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "scope": "./",
  "lang": "en",
  "categories": ["education", "productivity"],
  "icons": [
    {
      "src": "./icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "./icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Create Assignment",
      "short_name": "Create",
      "description": "Create a new assignment",
      "url": "./create-assignment.html",
      "icons": [
        {
          "src": "./icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "View All Assignments",
      "short_name": "All",
      "description": "View all assignments",
      "url": "./index.html?view=all",
      "icons": [
        {
          "src": "./icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "display_override": ["standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "screenshots": [
    {
      "src": "./screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "./screenshot-narrow.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+assignmenttracker",
      "url": "./index.html?assignment=%s"
    }
  ]
}
