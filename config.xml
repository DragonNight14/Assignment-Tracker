<?xml version='1.0' encoding='utf-8'?>
<widget id="com.assignmenttracker.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Assignment Tracker</name>
    <description>
        Track your school assignments with Canvas and Google Classroom integration
    </description>
    <author email="dev@assignmenttracker.com" href="https://github.com/yourusername/assignment-tracker">
        Assignment Tracker Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="icons/icon-48x48.png" />
        <icon density="mdpi" src="icons/icon-72x72.png" />
        <icon density="hdpi" src="icons/icon-96x96.png" />
        <icon density="xhdpi" src="icons/icon-144x144.png" />
        <icon density="xxhdpi" src="icons/icon-192x192.png" />
        <icon density="xxxhdpi" src="icons/icon-512x512.png" />
        
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="logo.svg" />
        <preference name="AndroidWindowSplashScreenBackground" value="#6366f1" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        
        <preference name="Orientation" value="portrait" />
        <preference name="Fullscreen" value="false" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#6366f1" />
        <preference name="StatusBarStyle" value="lightcontent" />
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="33" />
    <preference name="BackupWebStorage" value="local" />
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="^3.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^6.0.0" />
    <plugin name="cordova-plugin-network-information" spec="^3.0.0" />
    <plugin name="cordova-plugin-file" spec="^7.0.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^5.0.0" />
</widget>
